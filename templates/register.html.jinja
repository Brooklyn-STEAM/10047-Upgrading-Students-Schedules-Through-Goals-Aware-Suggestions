<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>CourseTracker</title>
    <link href= "/static/styles.css" rel="stylesheet" >
  </head>
<body class="min-h-screen bg-gradient-to-br from-emerald-100 to-emerald-200 flex items-center justify-center p-6">

  <form method="POST"
        class="bg-white p-10 rounded-2xl shadow-xl w-full max-w-md space-y-6">

    <h2 class="text-3xl font-bold text-emerald-800 text-center">
      Create Account
    </h2>

    <!-- Full Name -->
    <input 
      name="name" 
      type="text" 
      placeholder="Full Name" 
      required 
      class="w-full px-4 py-3 border border-emerald-200 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-emerald-500
             focus:border-emerald-500 transition"
    />

    <!-- Email -->
    <input 
      name="email" 
      type="email" 
      placeholder="Email" 
      required 
      class="w-full px-4 py-3 border border-emerald-200 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-emerald-500
             focus:border-emerald-500 transition"
    />

    <!-- Password -->
    <input 
      name="password" 
      type="password" 
      placeholder="Password" 
      required 
      class="w-full px-4 py-3 border border-emerald-200 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-emerald-500
             focus:border-emerald-500 transition"
    />

    <!-- Role -->
    <div>
      <label for="role" class="block mb-2 font-medium text-gray-700">
        Select Role
      </label>

      <select 
        name="role" 
        id="role" 
        required 
        class="w-full px-4 py-3 border border-emerald-200 rounded-lg
               focus:outline-none focus:ring-2 focus:ring-emerald-500
               focus:border-emerald-500 transition bg-white"
      >
        <option value="student">Student</option>
        <option value="counselor">Counselor</option>
      </select>
    </div>

    <!-- Button -->
    <button 
      type="submit" 
      class="w-full py-3 bg-emerald-700 text-white font-semibold 
             rounded-lg shadow-md
             hover:bg-emerald-800 hover:shadow-lg
             hover:-translate-y-0.5
             transition duration-200"
    >
      Sign Up
    </button>

    <p class="text-center text-gray-500 text-sm">
      Already have an account?
      <a href="/login" class="text-emerald-700 font-medium hover:underline">
        Log in
      </a>
    </p>

  </form>

</body>

</html>